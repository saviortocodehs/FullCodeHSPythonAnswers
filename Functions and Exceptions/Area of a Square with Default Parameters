def calculate_area(side_length=10):
    print("the area of a square with sides of length " + str(side_length) + " is " + str(side_length**2) + ".")
choose=int(input("Enter side length :"))
if choose<=0:
    side_length=10
    calculate_area(side_length)
else:
    side_length=choose
    calculate_area(side_length)
